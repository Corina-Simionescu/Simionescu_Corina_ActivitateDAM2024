<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="false"
    android:focusable="false"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textViewNume"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/checkBoxEsteAgresiv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Este agresiv: " />

        <TextView
            android:id="@+id/textViewRasa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textViewDimensiune"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textViewNivelDragutenie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <CheckBox
            android:id="@+id/checkBoxEsteJucaus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Este jucaus: " />
    </LinearLayout>

</LinearLayout>