<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/textViewActivity1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Activity 1" />

        <Button
            android:id="@+id/buttonGoToActivity2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go to activity 2" />

        <Button
            android:id="@+id/buttonGoToActivity3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go to activity 3" />

        <Button
            android:id="@+id/buttonGoToActivity4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go to activiyt 4" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>